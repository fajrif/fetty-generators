<% title "Account Recovery" %>

<%= form_tag create_user_recovery_path do %>
  <p>
    <%= label_tag :login, "Username or Email Address" %><br />
    <%= text_field_tag :login, params[:login] %>
  </p>
  <p><%= submit_tag "Submit" %></p>
<% end %>

<p>
	Don't have an account? <%= link_to "Sign up", new_user_registration_path %><br/>
	Already have an account? <%= link_to "Sign in", new_user_session_path %>
</p>
