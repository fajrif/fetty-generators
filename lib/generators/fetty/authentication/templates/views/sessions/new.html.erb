<% title "Sign in" %>

<%= form_tag create_user_session_path do %>
  <p>
    <%= label_tag :login, "Username or Email Address" %><br />
    <%= text_field_tag :login, params[:login] %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= label_tag :remember_me %><br />
    <%= check_box_tag :remember_me %>
  </p>
  <p><%= submit_tag "Sign in" %></p>
<% end %>

<p>
	Don't have an account? <%= link_to "Sign up", new_user_registration_path %><br/>
	Can't access your account? <%= link_to "Account recovery", new_user_recovery_path %>
</p>