<% title "Forgot my password" %>

<%= form_tag create_user_forgot_password_path do %>
	<p>
	  <%= label_tag :login, "Username or Email Address" %>
	  <%= text_field_tag :login %>
	</p>
	<p><%= submit_tag "Send me the password reset instructions" %></p>
<% end %>

<p>
	Don't have an account? <%= link_to "Sign up", new_user_registration_path %><br/>
	Already have an account? <%= link_to "Sign in", new_user_session_path %>
</p>
