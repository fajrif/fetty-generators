<table class="pretty">
  <tr>
  <%- for attribute in model_attributes -%>
    <th><%%= sort_link @search, :<%= attribute.name %> %></th>
  <%- end -%>
  	<%- if action? :show -%>
      <th></th>
    <%- end -%>
    <%- if action? :edit -%>
      <th></th>
    <%- end -%>
    <%- if action? :destroy -%>
      <th></th>
    <%- end -%>
  </tr>
  <%% for <%= instance_name %> in @<%= instances_name %> %>
    <tr>
    <%- for attribute in model_attributes -%>
      <td><%%= <%= instance_name %>.<%= attribute.name %> %></td>
    <%- end -%>
    <%- if action? :show -%>
    <td><%= generate_action_links(:read, instance_name, "Show", item_path) %></td>
    <%- end -%>
    <%- if action? :edit -%>
    <td><%= generate_action_links(:update, instance_name, "Edit", item_path(:action => :edit)) %></td>
    <%- end -%>
    <%- if action? :destroy -%>
    <td><%= generate_action_links(:destroy, instance_name, "Destroy", item_path) %></td>
    <%- end -%>
    </tr>
  <%% end %>
</table>

<p><%%= will_paginate @<%= plural_name %> %></p>