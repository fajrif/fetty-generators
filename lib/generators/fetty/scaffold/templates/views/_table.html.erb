<table class="pretty">
  <tr>
  <%- for attribute in model_attributes -%>
  	<th><%%= sort_link @search, :<%= attribute.name %> %></th>
  <%- end -%>
  <%- if action? :show -%>
	<th></th>
  <%- end -%>
  <%- if action? :edit -%>
	<th></th>
  <%- end -%>
  <%- if action? :destroy -%>
	<th></th>
  <%- end -%>
  </tr>
<%% for <%= instance_name %> in @<%= instances_name %> %>
	<tr>
<%- for attribute in model_attributes -%>
<%- if special_select(:image).include?(attribute.name) -%>
		<td><%%= image_tag <%= instance_name %>.<%= attribute.name %>_url if <%= instance_name %>.<%= attribute.name %>? %></td>
<%- elsif special_select(:file).include?(attribute.name) -%>
		<td><%%= link_to <%= instance_name %>.<%= attribute.name %>, <%= instance_name %>.<%= attribute.name %>_url %></td>
<%- elsif special_select(:editor).include?(attribute.name) -%>
		<td><%%= raw <%= instance_name %>.<%= attribute.name %> %></td>
<%- else -%>
		<td><%%= <%= instance_name %>.<%= attribute.name %> %></td>
<%- end -%>
<%- end -%>
<%- if action? :show -%>
		<td>
<%= generate_action_links(:read, instance_name, "Show", instance_name) %>
		</td>
<%- end -%>
<%- if action? :edit -%>
		<td>
<%= generate_action_links(:update, instance_name, "Edit", "edit_#{singular_table_name}_path(#{instance_name})") %>
		</td>
<%- end -%>
<%- if action? :destroy -%>
		<td>
<%= generate_action_links(:destroy, instance_name, "Destroy", instance_name) %>
		</td>
<%- end -%>
	</tr>
<%% end %>
</table>

<p><%%= paginate @<%= instances_name %> %></p>