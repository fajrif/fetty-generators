<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <% flash.each do |name, msg| %>
	    <%= content_tag(:div, :id => "flash_#{name}", :class => "flash closable") do %>
	    	<%=h msg %>
	    	<%= content_tag(:span, "[close]", :title => "close", :class => "closelink") %>
	    <% end %>
	  <% end %>

	<div id="loginbox">
	  <% if user_signed_in? %>
		<%= link_to "inbox(#{current_user.inbox(:opened => false).count})", messages_path(:inbox), :id => "inbox-link" %> |
	    Signed in as <%= link_to current_user.email, show_user_session_path %> Not You?
	    <%= link_to "Sign out", destroy_user_session_path %>
	  <% else %>
	    <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "Sign in", new_user_session_path %>
	  <% end %>
	</div>

      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>